{
  "manifest_version": 3,
  "name": "Chill Guy AI Assistant",
  "version": "1.0",
  "description": "An AI-powered desktop assistant with a chill attitude",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "https://api.groq.com/"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "dist/background.bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.bundle.js"
      ]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
}
