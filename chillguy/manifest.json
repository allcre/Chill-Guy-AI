{
  "manifest_version": 3,
  "name": "Chill Guy AI Assistant",
  "version": "1.0",
  "description": "An AI-powered desktop assistant with a chill attitude",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["95c.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
}
