{
  "manifest_version": 3,
  "name": "Chill Guy AI Assistant",
  "version": "1.0",
  "description": "An AI-powered desktop assistant with a chill attitude",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "images/icon128.png"
  }
}
