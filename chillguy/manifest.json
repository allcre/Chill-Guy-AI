{
  "manifest_version": 3,
  "name": "Chill Guy AI Assistant",
  "version": "1.0",
  "description": "An AI-powered desktop assistant with a chill attitude",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.tiktok.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.tiktok.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
