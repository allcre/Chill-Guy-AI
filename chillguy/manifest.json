{
  "manifest_version": 3,
  "name": "Chill Guy AI Assistant",
  "version": "1.0",
  "description": "An AI-powered desktop assistant with a chill attitude",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "webNavigation",
    "notifications"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "host_permissions": ["https://api.groq.com/openai/v1/completions"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["95c.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
}
